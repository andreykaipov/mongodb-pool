{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./",
    "noImplicitAny": true,
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2016"
    ]
  },
  "include": [
    "./mongodb-pool/*.ts"
  ],
  "exclude": [
    "./node_modules/**"
  ]
}